<form action="/hammer/add" method="post" class="container col-md-8 card bg-warning mt-3">
    <h1 class="text-danger text-uppercase text-center mt-3">Add new Spindle</h1>
    <div class="form-group mt-3">
        <label for="brand" class="text-primary">Name</label>
        <input class="form-control" type="text" name="brand" required minlength="3" maxlength="100">
    </div>
    <div class="form-group mt-3">
        <label for="price" class="text-primary">Price</label>
        <input class="form-control" type="text" name="price">
    </div>
    <div class="form-group mt-3">
        <label for="description" class="text-primary">Description</label>
        <input class="form-control" type="text" name="description">
    </div>
    <div class="form-group mt-3">
        <label for="image" class="text-primary">Product Image</label>
        <input class="form-control" type="url" name="image" required>
    </div>
    <div class="form-group mt-3 mb-3 text-center">
        <input class="btn btn-primary" type="submit" value="Add">
        <input class="btn btn-success" type="reset" value="Clear">
    </div>
</form>